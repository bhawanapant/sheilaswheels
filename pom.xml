            <!--<id>esure</id>-->
            <!--<properties>-->
                <!--<spring-profile>esure</spring-profile>-->
            <!--</properties>-->
            <!--<activation>-->
                <!--<activeByDefault>false</activeByDefault>-->
            <!--</activation>-->

        <!--</profile>-->
    </profiles>
</project>