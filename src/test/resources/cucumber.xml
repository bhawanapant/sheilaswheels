<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
                      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <context:component-scan base-package ="com.sheilaswheels"/>
    <context:annotation-config/>

    <context:property-placeholder location="classpath:config/application.properties"/>

    <beans profile="default">
        <context:property-placeholder location="classpath:config/application.properties"/>
    </beans>

    <beans profile="sw">
        <context:property-placeholder location="classpath:config/application-sw.properties" />
    </beans>

    <beans profile="esure">
        <context:property-placeholder location="classpath:config/application-esure.properties"/>
    </beans>

</beans>